<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lesson05" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/ghost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/ghost_white</item>
    </style>

    <style name="TextViewActionsStyle">
        <item name="android:textColor">@color/gray_for_light_theme</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TextViewResultStyle">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">55sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/gray_for_light_theme</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:backgroundTint">@color/white_smoke</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="ButtonEqualStyle">
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="cornerRadius">35dp</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="srcCompat">@drawable/settings_light100x100</item>
    </style>

    <style name="TextViewSettingsStyle">
        <item name="android:textColor">@color/gray_for_settings</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="fontFamily">monospace</item>
        <item name="android:textColor">@color/gray_for_settings</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonReturnStyle">
        <item name="android:backgroundTint">@color/purple</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">26sp</item>
    </style>
</resources>