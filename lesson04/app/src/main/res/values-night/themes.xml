<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lesson04" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_gray_for_dark_theme</item>
        <item name="colorOnPrimary">@color/ghost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/dark_gray_for_light_theme</item>
    </style>

    <style name="TextViewActionsStyle">
        <item name="android:textColor">@color/gray_for_dark_theme</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TextViewResultStyle">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">55sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/gray_for_dark_theme</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:backgroundTint">@color/dark_gray_for_dark_theme</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="ButtonEqualStyle">
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">monospace</item>
        <item name="cornerRadius">25dp</item>
    </style>
</resources>